
@{
    ViewBag.Title = "ChoosePlayer";
}

@using(Html.BeginForm("PlayerGames", "History", new { @class = "form-horizontal", role = "form" }))
{
<div class="form-group">

    <div class="form-group">
        <label class="col-md-2">Choose NickName to find out his games</label>
        <div class="col-md-10">
            @Html.DropDownList("name", (IEnumerable<SelectListItem>)ViewBag.selectListPlayers, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10 ">
            <input type="submit" class="btn btn-success" value="Search" />
        </div>
    </div>
</div>
}

